<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include ('../includes/navigation.ejs') %>
    <main>
        <h1>Commande</h1>
        <% if(orders.length <= 0) { %>
            <h2>Rien ici!</h2>
        <% } else { %> 
            <ul>
                <% orders.forEach(order => { %>
                    <li>
                        <h2># <%= order.id %></h2>
                        <ul>
                            <% order.products.forEach(product => { %>
                                <li><%= product.title %> (<%= product.orderItem.quantity %>)</li>
                            <% }); %>
                        </ul>
                    </li>
                <% }); %>
            </ul>
        <% } %>
    </main>
    <%- include ('../includes/end.ejs') %>
